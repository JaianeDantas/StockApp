<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="stockapp.jaianedantas.com.br.stockapp.activities.activity_form_itemVenda_produto">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Produto:"
            android:id="@+id/itemVenda2-ProdutoLabel"
            android:layout_column="0"
            android:layout_row="0" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ItemVenda2-ProdutoSpinner"
            android:layout_column="0"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Quantidade:"
            android:id="@+id/ItemVenda2-QuantidaddLabel"
            android:layout_column="0"
            android:layout_row="2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ItemVenda2-QuantidadeText"
            android:layout_column="0"
            android:layout_row="3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:id="@+id/ItemVenda2-BotaoSalvar"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpar"
                android:id="@+id/ItemVenda2-BotaoLimpar"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="bottom|center_horizontal" />
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
