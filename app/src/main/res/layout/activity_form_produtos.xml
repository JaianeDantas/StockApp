<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="stockapp.jaianedantas.com.br.stockapp.activities.Form_produtos">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código:"
            android:id="@+id/txCod"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/campCod"
            android:inputType="number"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto:"
            android:id="@+id/txProduto"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/campProduto"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição:"
            android:id="@+id/txDescricao"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/campDescricao"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade disponível em Estoque:"
            android:id="@+id/txEstoque"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/campEstoque"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor do Produto:"
            android:id="@+id/txValor"
            android:layout_row="8"
            android:layout_column="0" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|bottom">

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="CADASTRAR"
                android:id="@+id/butCasdastrar"
                android:layout_row="0"
                android:layout_column="0"
                android:drawableLeft="@android:drawable/ic_input_add"/>

            />

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="LIMPAR"
                android:id="@+id/butLimpar"
                android:layout_row="1"
                android:layout_column="0"
                android:drawableLeft="@android:drawable/ic_delete"/>
            />
        </GridLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/campValor"
            android:layout_row="9"
            android:layout_column="0" />
    </GridLayout>

</RelativeLayout>
