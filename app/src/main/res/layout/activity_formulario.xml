<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="stockapp.jaianedantas.com.br.stockapp.Formulario">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpNome"
            android:layout_row="1"
            android:layout_column="0"
            android:capitalize="words" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/cpEmail"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:id="@+id/textView4"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/cpTelefone"
            android:layout_row="5"
            android:layout_column="0"
            android:hint="ex.: (84) 99999 - 9999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Nascimento:"
            android:id="@+id/textView5"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/cpNascimento"
            android:layout_row="7"
            android:layout_column="0"
            android:hint="ex.: 09/09/1999"
            android:imeOptions="actionDone"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo: "
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="0" />



            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:orientation="horizontal"
                android:id="@+id/sexo"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:id="@+id/radioButton"
                    android:checked="false"
                    android:layout_row="0"
                    android:layout_column="1" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:id="@+id/radioButton2"
                    android:checked="false" />

            </RadioGroup>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receber Promoções"
                android:id="@+id/stPromocoes"
                android:layout_row="0"
                android:layout_column="8"
                android:checked="true" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALVAR"
                android:id="@+id/btSalvar"
                android:layout_row="0"
                android:layout_column="0"
                android:drawableLeft="@android:drawable/ic_input_add"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIMPAR"
                android:id="@+id/btLimpar"
                android:layout_row="0"
                android:layout_column="2"
                android:drawableLeft="@android:drawable/ic_delete"
                />
        </GridLayout>

    </GridLayout>

</RelativeLayout>
